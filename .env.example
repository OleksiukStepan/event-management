POSTGRES_HOST=db
POSTGRES_PORT=5432

# Email (SMTP for production)
# For Gmail: use smtp.gmail.com with App Password
# For other providers: check their SMTP settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
# REQUIRED: Your email address
EMAIL_HOST_USER=
# REQUIRED: App password (not your regular password)
# For Gmail: https://support.google.com/accounts/answer/185833
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True
# Email address shown in "From" field
DEFAULT_FROM_EMAIL=
