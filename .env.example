# Django
# Set to False in production
DEBUG=True
# REQUIRED: Generate a secure key for production (e.g., python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
SECRET_KEY=
# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL for Docker/production)
POSTGRES_DB=events_db
POSTGRES_USER=
POSTGRES_PASSWORD=
